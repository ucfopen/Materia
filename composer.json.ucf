{
    "name": "ucfcdl/materia",
    "type": "project",
    "description" : "Materia is UCF's educational game and application platform",
    "keywords": ["materia", "ucf", "cdl", "games", "edutainment", "widgets", "education", "university of central florida"],
    "license": "No License",
    "scripts":{
        "sniff": "./fuel/vendor/bin/phpcs --extensions=php .",
        "sniff-errors-only": "./fuel/vendor/bin/phpcs -n --extensions=php .",
        "sniff-summary": "./fuel/vendor/bin/phpcs --report=summary --extensions=php .",
        "post-install-cmd": "cp ./githooks/pre-commit ./.git/hooks/pre-commit",
        "git-pre-commit":"@sniff-summary"
    },
    "require": {
        "php": ">=5.6.0",
        "ext-pdo": "*",
        "ext-gd": "*",
        "composer/installers": "~1.0",
        "fuel/core": "1.8.0.3",
        "fuel/auth": "1.8.0",
        "fuel/email": "1.8.0",
        "fuel/oil": "1.8.0",
        "fuel/orm": "1.8.0",
        "fuel/parser": "1.8.0",
        "iturgeon/qasset": "1.0.4",
        "fuelphp/upload": "2.0.6",
        "monolog/monolog": "1.18.*",
        "phpseclib/phpseclib": "2.0.0",
        "eher/oauth": "1.0.7",
        "onelogin/php-saml": "2.10.2",
        "materia/ucfauth": "0.1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.*",
        "squizlabs/php_codesniffer": "2.9",
        "ucfcdl/fuelphp-phpcs": "master"
    },
    "suggest": {
        "fuel/docs": "FuelPHP documentation"
    },
    "config": {
        "vendor-dir": "fuel/vendor",
        "optimize-autoloader": true
    },
    "extra": {
        "installer-paths": {
            "fuel/{$name}": ["fuel/core"],
            "{$name}": ["fuel/docs"]
        }
    },
    "repositories": [
        {
            "type"    : "package",
            "package" : {
                "name"    : "ucfcdl/fuelphp-phpcs",
                "version" : "master",
                "dist"    : {
                    "url"  : "https://github.com/ucfcdl/fuelphp-phpcs/archive/master.zip",
                    "type": "zip"
                },
                "source"  : {
                    "url"       : "https://github.com/ucfcdl/fuelphp-phpcs.git",
                    "type"      : "git",
                    "reference" : "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "materia/ucfauth",
                "type": "fuel-package",
                "version": "0.1.7",
                "source": {
                    "url": "https://github.com/ucfcdl/Materia-UCFAuth.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "minimum-stability": "dev"
}